class Solution {
    cntSubarrays(arr, k) {
        // code here
        let ans = 0;
        let map = new Map();
        map.set(0, 1);
        let sum = 0;
        
        for(let i = 0; i < arr.length; i++) {
            sum += arr[i];
            if(map.has(sum - k)) {
                ans += map.get(sum - k);
            } 
            map.set(sum, map.get(sum) + 1 || 1);
        }
       
        return ans;
    }
}    